<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    tools:context="com.example.vinicius.faculcarona.ConfirmarSerMotoristaActivity">

    <TextView
        android:id="@+id/textView19"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView9"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Informe a quantidade de vagas no carro"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/qtdVagasCarro"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/textView19"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:entries="@array/array_vagas_carro" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/qtdVagasCarro"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/cardView1"
            android:layout_alignLeft="@+id/cardView1"
            android:layout_alignStart="@+id/cardView1">

            <TextView
                android:id="@+id/botaoConfirmarVagass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="CONFIRMAR"
                android:textColor="#fff"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        app:srcCompat="@drawable/carro" />
</RelativeLayout>
